{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/registrationForm.css') }}" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
{% endblock %}

{% block body %}
        {% block header %}
            <div id="header">
            <a href="{{ path('registration') }}" class="registration">Registration</a>
            </div>
        {% endblock %}

    {{ form_start (form,{'attr':{'id':'custom_post_form'}})}}
    {{ form_row(form.email, {'attr': {'value': last_username}}) }}
    {{ form_row(form.plainPassword) }}
    <button type="submit" class="btn-success" value="Submit" name="Submit">Submit</button>
    {{ form_end (form)}}

{% endblock %}
