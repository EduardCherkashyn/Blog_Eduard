{% extends 'form/registration.html.twig' %}
{% block title %}Add a new Article{% endblock %}

{% block body %}
    <div class="container">
    {% block header %}
        <header id="header">
            <a href="{{ path('app_logout') }}" class="btn btn-primary btn-lg btn-block">Logout</a>
            <a href="{{ path('show_articles') }}" class="btn btn-primary btn-lg btn-block">List of Articles</a>
        </header>
     {% endblock %}
    {{ form_start (registration_form,{'attr':{'id':'custom_post_form'}})}}

    <div class="form-group">

    {{ form_row(registration_form.nameToPublish,{'attr':{'class':'form-control', 'id':'formGroupExampleInput'}}) }}
    {{ form_row(registration_form.textToPublish,{'attr':{'class':'form-control', 'id':'exampleFormControlTextarea1','rows':13}}) }}

        <input type="submit" class="btn-success" value="Submit" name="Submit" />
    </div>
    {{ form_end (registration_form)}}
    </div>
{% endblock %}