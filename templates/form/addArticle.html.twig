{% extends 'form/registration.html.twig' %}
{% block title %}Add a new Article{% endblock %}
{% block stylesheets %}
{{ parent() }}
    <link href="{{ asset('css/listOfArticles.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
    {% block header %}
        <header id="header">
            <a href="{{ path('app_logout') }}" class="logout">Logout</a>
            <a href="{{ path('show_articles') }}" class="articlesList">List of Articles</a>
        </header>
     {% endblock %}
    {{ form_start (registration_form,{'attr':{'id':'custom_post_form'}})}}
    {{ form_widget(registration_form) }}
    <input type="submit" class="btn-success" value="Submit" name="Submit" />
    {{ form_end (registration_form)}}
{% endblock %}